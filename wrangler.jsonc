/**
 * For more details on how to configure Wrangler, refer to:
 * https://developers.cloudflare.com/workers/wrangler/configuration/
 */
{
	"$schema": "node_modules/wrangler/config-schema.json",
	"name": "stock-worker",
	"main": "src/index.js",
	"compatibility_date": "2025-11-05",
	"observability": {
		"enabled": true
	},
	"triggers": {
		"crons": [
			"0 0 * * *", // Daily at 00:00 UTC,
			"0 0 * * 1" // # + weekly (Mondays 00:00 UTC)
		]
	},
	"d1_databases": [
		{
			"binding": "DB", // Key to be used in .env
			"database_name": "stocks-db",
			"database_id": "c3476d78-33cc-40e5-ae7b-f0a54e0b663b",
			"remote": true
		},
		{
			"binding": "DB_PREVIEW",
			"database_name": "stocks-db-preview",
			"database_id": "b6c299a8-3b41-42ec-bcef-311aca0fb681"
		}
	]
	/**
	 * Smart Placement
	 * Docs: https://developers.cloudflare.com/workers/configuration/smart-placement/#smart-placement
