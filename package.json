{
	"name": "stock-worker",
	"version": "0.0.0",
	"private": true,
	"scripts": {
		"dev": "wrangler dev",
		"dev:remote": "wrangler dev --remote",
		"dev:remote:prod": "wrangler dev --remote --env production",
		"deploy": "wrangler deploy",

		"db:migrate:local": "wrangler d1 migrations apply stocks-db --local",
		"db:migrate:preview": "wrangler d1 migrations apply stocks-db-preview --remote",
		"db:migrate:prod": "wrangler d1 migrations apply stocks-db --remote",
		"db:migrate:list:preview": "wrangler d1 migrations list stocks-db-preview --remote",
		"db:migrate:list:prod": "wrangler d1 migrations list stocks-db --remote",

		"db:export:preview": "mkdir -p ./.d1 && wrangler d1 export stocks-db-preview --remote --output=./.d1/preview.sql",
		"db:export:prod": "mkdir -p ./.d1 && wrangler d1 export stocks-db --remote --output=./.d1/prod.sql",

		"db:to-sqlite:preview": "sqlite3 ./.d1/preview.db < ./.d1/preview.sql",
		"db:to-sqlite:prod": "sqlite3 ./.d1/prod.db < ./.d1/prod.sql",

		"db:snapshot:preview": "npm run db:export:preview && npm run db:to-sqlite:preview",
		"db:snapshot:prod": "npm run db:export:prod && npm run db:to-sqlite:prod",

		"db:reset:preview": "wrangler d1 execute stocks-db-preview --remote --file=./.d1/reset.sql",
		"db:sync:prod-preview": "npm run db:reset:preview && npm run db:export:prod && wrangler d1 execute stocks-db-preview --remote --file=./.d1/prod.sql",
		"db:sync:preview-prod": "npm run db:export:preview && wrangler d1 execute stocks-db --remote --file=./.d1/preview.sql",

		"db:tables:preview": "wrangler d1 shell stocks-db-preview --remote -c \".tables\"",
		"db:tables:prod": "wrangler d1 shell stocks-db --remote -c \".tables\""
	},
		"devDependencies": {
		"@cloudflare/vitest-pool-workers": "^0.8.19",
		"vitest": "~3.2.0",
		"wrangler": "^4.45.4"
	}
}
